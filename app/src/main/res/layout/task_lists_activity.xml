<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="cz.uhk.fim.skoreto.todolist.TaskListsActivity">

    <!-- Pomocny item pro zabraneni etTaskName ziskani uvodniho focusu
    :nextFocusUp and :nextFocusLeft u etTaskName brani znovuziskani focusu -->
    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="0px"
        android:layout_height="0px" />

    <LinearLayout
        xmlns:local="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/tlbTaskListsActivity"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            local:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            local:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:elevation="4dp" />

        <EditText
            android:id="@+id/etTaskListName"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:ems="15"
            android:inputType="textShortMessage"
            android:hint="@string/et_task_list_name_hint"
            android:nextFocusUp="@id/etTaskListName"
            android:nextFocusLeft="@id/etTaskListName"
            android:layout_marginTop="4dp"
            android:layout_gravity="center_horizontal" />

        <ListView
            android:id="@+id/lvTaskListsList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </ListView>

    </LinearLayout>

    <Button
        android:id="@+id/btnAddTaskList"
        android:text="@string/btn_add_task_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>