<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:useDefaultMargins="true"
    android:alignmentMode="alignBounds"
    android:columnOrderPreserved="false"
    android:columnCount="2"
    android:rowCount="6" >

    <TextView
        android:id="@+id/tvTaskName"
        android:text="@string/tv_task_name"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:id="@+id/etTaskName"
        android:inputType="textShortMessage"
        android:layout_row="0"
        android:layout_column="1"
        android:ems="13"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/tvTaskDescription"
        android:text="@string/tv_task_description"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:id="@+id/etTaskDescription"
        android:inputType="textMultiLine"
        android:layout_row="1"
        android:layout_column="1"
        android:ems="13" />

    <TextView
        android:id="@+id/tvTaskList"
        android:text="@string/tv_task_list"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_gravity="center_horizontal" />

    <Spinner
        android:id="@+id/spinTaskLists"
        android:prompt="@string/tv_task_completed"
        android:layout_row="2"
        android:layout_column="1"/>

    <TextView
        android:id="@+id/tvTaskCompleted"
        android:text="@string/tv_task_completed"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_gravity="center_horizontal" />

    <CheckBox
        android:id="@+id/chbTaskCompleted"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_row="3"
        android:layout_column="1" />

    <Button
        android:id="@+id/btnTakePhoto"
        android:onClick="takePhoto"
        android:text="@string/btn_take_photo"
        android:layout_row="4"
        android:layout_column="0" />

    <ImageView
        android:id="@+id/ivTaskPhoto"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_row="4"
        android:layout_column="1"
        />

    <Button
        android:id="@+id/btnEditTask"
        android:onClick="editTask"
        android:text="@string/btn_edit_task"
        android:layout_row="5"
        android:layout_column="0"
        android:layout_gravity="bottom|end" />

    <Button
        android:id="@+id/btnDeleteTask"
        android:onClick="deleteTask"
        android:text="@string/btn_delete_task"
        android:layout_row="5"
        android:layout_column="1"
        android:layout_gravity="bottom|end" />

</GridLayout>