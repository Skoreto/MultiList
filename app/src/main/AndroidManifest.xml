<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cz.uhk.fim.skoreto.todolist">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">

        <activity
            android:name="cz.uhk.fim.skoreto.todolist.TaskListActivity"
            android:parentActivityName="cz.uhk.fim.skoreto.todolist.TaskListsActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTop">

            <!-- Parent activity meta-data pro podporu 4.0 a nizsich -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cz.uhk.fim.skoreto.todolist.TaskListsActivity" />
        </activity>

        <activity android:name="cz.uhk.fim.skoreto.todolist.TaskDetailActivity"
            android:parentActivityName="cz.uhk.fim.skoreto.todolist.TaskListActivity"
            android:screenOrientation="portrait">

            <!-- Parent activity meta-data pro podporu 4.0 a nizsich -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cz.uhk.fim.skoreto.todolist.TaskListActivity" />
        </activity>

        <activity android:name="cz.uhk.fim.skoreto.todolist.TaskListsActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".SinglePhotoActivity"></activity>
    </application>

</manifest>
